<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="apt.tianhao.idelivery.Dashboard">





    <TextView
        android:id="@+id/infotext"
        android:text="@string/hello_world"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        />
    <ImageView
        android:id="@+id/infoimg"
        android:layout_width="100px"
        android:layout_height="100px"
        android:layout_gravity="center"
        />



    <Button
        android:layout_marginTop="15dp"
        android:layout_width="450px"
        android:layout_height="wrap_content"
        android:id="@+id/view_tasks"
        android:text="View all tasks"
        style="@style/btnStyleShakespeare"
        android:layout_gravity="center"
        android:paddingTop="@dimen/activity_horizontal_margin"

        />
    <Button
        android:layout_marginTop="15dp"

        android:layout_width="450px"
        android:layout_height="wrap_content"
        android:id="@+id/post"
        android:text="Post new task"
        style="@style/btnStyleGenoa"
        android:layout_gravity="center"

        android:paddingTop="@dimen/activity_horizontal_margin"

        />

    <Button
        android:layout_marginTop="15dp"

        android:layout_width="450px"
        android:layout_height="wrap_content"
        android:id="@+id/get"
        android:text="Get new task"
        style="@style/btnStyleShakespeare"
        android:layout_gravity="center"
        android:paddingTop="@dimen/activity_horizontal_margin"

        />
    <Button
        android:layout_marginTop="15dp"

        android:layout_width="450px"
        android:layout_height="wrap_content"
        android:id="@+id/logout"
        android:text="Logout"
        style="@style/btnStyleBreakerBay"
        android:paddingTop="@dimen/activity_horizontal_margin"

        android:layout_gravity="center"

        />




    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/notifications"
        android:layout_gravity="center_vertical"
        >
        <TextView
            android:id="@+id/notification"
            android:text="Welcome to IDelivery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="20sp"

            />
            <!-- everything you already have -->
    </ScrollView>

</LinearLayout>
